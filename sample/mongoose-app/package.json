{
  "name": "mongoose-app",
  "version": "0.1.0",
  "description": "Backend mongoose API using ivy-nestjs library",
  "author": "Luka Matosevic",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "start": "nest start --tsc",
    "start:dev": "nest start --watch --tsc",
    "start:debug": "nest start --debug --watch --tsc",
    "start:prod": "node dist/main.js",
    "test": "jest --no-cache --forceExit --detectOpenHandles --coverage",
    "test:e2e": "jest --no-cache --forceExit --config ./test/e2e/jest-e2e.json",
    "create-resource": "node ../../cli/create-resource.js mongoose"
  },
  "dependencies": {
    "@casl/ability": "5.4.4",
    "@nestjs/common": "8.4.5",
    "@nestjs/config": "2.0.1",
    "@nestjs/core": "8.4.5",
    "@nestjs/graphql": "10.0.14",
    "@nestjs/mongoose": "9.1.0",
    "@nestjs/swagger": "5.2.1",
    "class-transformer": "0.4.0",
    "class-validator": "0.13.2",
    "mongoose": "6.3.5",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.5.5"
  },
  "devDependencies": {
    "@nestjs/cli": "8.2.6",
    "@nestjs/schematics": "8.0.11",
    "@nestjs/testing": "8.4.6",
    "@types/express": "4.17.13",
    "@types/jest": "27.4.1",
    "@types/node": "17.0.38",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.27.0",
    "@typescript-eslint/parser": "5.27.0",
    "esbuild": "0.14.43",
    "eslint": "8.16.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "28.1.0",
    "prettier": "2.6.2",
    "rimraf": "3.0.2",
    "source-map-support": "0.5.21",
    "supertest": "6.2.3",
    "ts-jest": "28.0.3",
    "ts-loader": "9.3.0",
    "ts-node": "10.8.0",
    "tsconfig-paths": "4.0.0",
    "typescript": "4.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.(spec|test)\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/test/src"
    ],
    "moduleNameMapper": {
      "^@resources(|/.*)$": "<rootDir>/src/resources/$1",
      "^@modules(|/.*)$": "<rootDir>/src/modules/$1",
      "^ivy-nestjs(|/.*)$": "<rootDir>/../../lib/$1"
    }
  }
}
