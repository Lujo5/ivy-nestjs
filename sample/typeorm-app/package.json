{
  "name": "typeorm-app",
  "version": "0.1.0",
  "description": "Backend typeorm API using ivy-nestjs library",
  "author": "Luka Matosevic",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js -d ../../lib/typeorm/ormconfig.ts",
    "migration:generate": "npm run typeorm -- migration:generate",
    "migration:run": "npm run typeorm -- migration:run",
    "migration:revert": "npm run typeorm -- migration:revert",
    "migration:create": "typeorm migration:create",
    "start": "nest start --tsc",
    "start:dev": "nest start --watch --tsc",
    "start:debug": "nest start --debug --watch --tsc",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "compodoc": "npx compodoc -p tsconfig.json src",
    "test": "jest --no-cache --forceExit --detectOpenHandles --coverage",
    "test:e2e": "jest --no-cache --forceExit --config ./test/e2e/jest-e2e.json",
    "prerelease": "npm run build",
    "release": "standard-version -a",
    "postrelease": "git commit -am \"chore: update changelog\" && git push --follow-tags origin master",
    "create-resource": "node ../../cli/create-resource.js typeorm"
  },
  "dependencies": {
    "@nestjs/common": "8.4.5",
    "@nestjs/config": "2.0.1",
    "@nestjs/core": "8.4.5",
    "@nestjs/graphql": "10.0.14",
    "@nestjs/swagger": "5.2.1",
    "@nestjs/typeorm": "8.1.2",
    "class-transformer": "0.4.0",
    "class-validator": "0.13.2",
    "pg": "8.7.3",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.5.5",
    "typeorm": "0.3.6"
  },
  "devDependencies": {
    "@nestjs/cli": "8.2.6",
    "@nestjs/schematics": "8.0.11",
    "@nestjs/testing": "8.4.6",
    "@types/express": "4.17.13",
    "@types/jest": "27.4.1",
    "@types/node": "17.0.38",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.27.0",
    "@typescript-eslint/parser": "5.27.0",
    "esbuild": "0.14.43",
    "eslint": "8.16.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "28.1.0",
    "prettier": "2.6.2",
    "rimraf": "3.0.2",
    "source-map-support": "0.5.21",
    "supertest": "6.2.3",
    "ts-jest": "28.0.3",
    "ts-loader": "9.3.0",
    "ts-node": "10.8.0",
    "tsconfig-paths": "4.0.0",
    "typescript": "4.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.(spec|test)\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/test/src"
    ],
    "moduleNameMapper": {
      "^@resources(|/.*)$": "<rootDir>/src/resources/$1",
      "^@modules(|/.*)$": "<rootDir>/src/modules/$1",
      "^ivy-nestjs(|/.*)$": "<rootDir>/../../lib/$1"
    }
  },
  "standard-version": {
    "types": [
      {
        "type": "feat",
        "section": "Features"
      },
      {
        "type": "fix",
        "section": "Bug Fixes"
      },
      {
        "type": "chore",
        "hidden": true
      },
      {
        "type": "docs",
        "hidden": true
      },
      {
        "type": "style",
        "hidden": true
      },
      {
        "type": "refactor",
        "hidden": true
      },
      {
        "type": "perf",
        "hidden": true
      },
      {
        "type": "test",
        "hidden": true
      }
    ],
    "skip": {
      "commit": true
    }
  }
}
