{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "webpack": false,
    "plugins": [
      {
        "name": "@nestjs/graphql",
        "options": {
          "typeFileNameSuffix": [
            ".schema.ts",
            ".dto.ts"
          ],
          "introspectComments": true
        }
      },
      {
        "name": "@nestjs/swagger",
        "options": {
          "dtoFileNameSuffix": [
            ".schema.ts",
            ".dto.ts"
          ],
          "classValidatorShim": false,
          "introspectComments": true
        }
      }
    ]
  }
}
